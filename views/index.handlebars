<h1 class="text-center">Welcome to Build-A-Burger!</h1>
<img src="/assets/img/burger.png" alt="burger">
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <ul class="col-6 text-center">
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block}}
            {{/unless}}
        {{/each}}
        </ul>

        <ul class="col-6 text-center list-group">
        {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item eaten">{{id}}. {{burger_name}}</li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<form class="build-burger text-center mt-5">
    <textarea class="text-center" id="burg"></textarea>
    <br>
    <button class="btn-lg btn-primary" type="submit">Build my burger!</button>
</form>